          <outputChannelsPerSubband value="1"/>
          <udpPacketsPerIteration value="128"/>
          <foff value="-0.390625"/>
          <tsamp value="0.00065536"/>
          <dataBits value="32"/>
          <subbandsPerPacket value="1"/>
          <file filepath="/usr/local/src/pelican-lofar/K7_fb"/>
