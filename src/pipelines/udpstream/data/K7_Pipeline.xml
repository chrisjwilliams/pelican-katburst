        <BandPassData file="/usr/local/src/pelican-lofar/alfa.bp"/>
        <Band matching="true"/>
        <History maximum="10000"/>
      </RFI_Clipper-->

      <StokesIntegrator>
        <integrateTimeBins value="1"/>
        <integrateFrequencyChannels value="1"/>
      </StokesIntegrator>

      <!--DedispersionModule>
        <timeBinsPerBufferPow2 value="15"/>
        <sampleTime seconds="0.00065536"/>
